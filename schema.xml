<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE schema SYSTEM "../../../lib/pkp/dtd/xmlSchema.dtd">

<!--
  * plugins/generic/scieloScreening/schema.xml
  *
  * ScieloScreeningPlugin database XML schema.
  *
  -->

<schema version="0.2">
	<!--
	 *
	 * TABLE doi_screening
	 *
	 -->
	<table name="doi_screening">
		<field name="doi_id" type="I8">
            <KEY/>
			<NOTNULL/>
            <AUTOINCREMENT/>
		</field>
		<field name="submission_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="doi_code" type="C2" size="255">
			<NOTNULL/>
		</field>
		<descr>A DOI provided during the screening. Every publication should have two of this</descr>
	</table>
</schema>
